<div class="lightbox js-lightbox is-open">
    <div class="lightbox__overlay"></div>

    <div class="lightbox__content">
        <iframe class='video' width="560" height="315" src="https://www.youtube.com/embed/{{key}}" frameborder="0"
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
        </iframe>
    </div>

    <button type="button" class="lightbox__button" data-action="close-lightbox "><i
            class="far fa-times-circle"></i></button>
</div>